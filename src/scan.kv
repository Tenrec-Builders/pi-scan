<ScanRoot>:
  StartScreen:
  ConfigureDiskScreen:
  ConfigureCameraScreen:
  ZoomCameraScreen:
  ShutterCameraScreen:
  FocusCameraScreen:
  CaptureScreen:
  CaptureWaitScreen:
  PreviewWaitScreen:
  CaptureFailScreen:
